{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    // 禁止编译错误
    "noEmitOnError":  true,
    "noImplicitAny": true,
    "outDir": "dist",
    "experimentalDecorators": true, // 开启对装饰器的支持
  },
}
